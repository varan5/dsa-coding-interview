
# Time: O(n^2)  Space: O(1)

def bubbleSort(array):
    isSorted = False
    while not isSorted:
        isSorted = True
        for i in range(len(array) -1):
            if array[i] > array[i+1]:
                swap(array, i, i+1)
                isSorted = False
    return array

def swap(array, i, j):
    array[i], array[j] = array[j], array[i]








